<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- COURSE VIEW -->
    <record id="slide_channel_view_form_inherit_blockchain" model="ir.ui.view">
        <field name="name">slide.channel.view.form.blockchain</field>
        <field name="model">slide.channel</field>
        <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Monetization &amp; Blockchain">
                    <group>
                        <group string="Course Pricing">
                            <field name="course_price" widget="monetary"/>
                        </group>
                        <group string="Blockchain Certification">
                            <field name="blockchain_certification_active" widget="boolean_toggle"/>
                            <field name="blockchain_cost" invisible="not blockchain_certification_active"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- ENROLLMENT VIEW -->
    <!-- Showing entitlement status -->
    <record id="slide_channel_partner_view_tree_inherit_blockchain" model="ir.ui.view">
        <field name="name">slide.channel.partner.view.list.blockchain</field>
        <field name="model">slide.channel.partner</field>
        <field name="inherit_id" ref="website_slides.slide_channel_partner_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='create_date']" position="after">
                <field name="blockchain_certification_entitled" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
