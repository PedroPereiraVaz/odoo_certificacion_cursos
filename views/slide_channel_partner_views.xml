<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="survey_user_input_view_form_inherit_blockchain" model="ir.ui.view">
        <field name="name">survey.user_input.view.form.blockchain</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_blockchain_register" 
                        string="Register on Blockchain" 
                        type="object" 
                        class="oe_highlight"
                        invisible="not scoring_success or blockchain_entry_id"/>
                
                <button name="action_blockchain_revoke" 
                        string="Revoke Blockchain Cert" 
                        type="object" 
                        class="btn-danger"
                        invisible="not blockchain_entry_id or blockchain_status == 'revoked'"/>
            </xpath>
            <xpath expr="//sheet" position="before">
                <div class="alert alert-info" role="alert" invisible="not blockchain_entry_id">
                    <strong>Blockchain Status:</strong> <field name="blockchain_status" readonly="1"/>
                    <span invisible="not blockchain_hash"> (Hash: <field name="blockchain_hash" readonly="1"/>)</span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
